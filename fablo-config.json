{
  "$schema": "https://github.com/hyperledger-labs/fablo/releases/download/1.2.0/schema.json",
  "global": {
    "fabricVersion": "2.4.7",
    "tls": false,
    "engine": "docker",
    "peerDevMode": false,
    "tools": {
      "explorer": true
    }
  },
  "orgs": [
    {
      "organization": {
        "name": "Orderer",
        "domain": "orderer.example.com"
      },
      "orderers": [
        {
          "groupName": "group1",
          "type": "solo",
          "instances": 1
        }
      ],
      "tools": {
        "fabloRest": false
      }
    },
    {
      "organization": {
        "name": "Org1",
        "domain": "org1.example.com"
      },
      "peer": {
        "instances": 2,
        "db": "CouchDb"
      },
      "tools": {
        "fabloRest": false
      }
    },
    {
      "organization": {
        "name": "Org2",
        "domain": "org2.example.com"
      },
      "peer": {
        "instances": 2,
        "db": "CouchDb"
      },
      "tools": {
        "fabloRest": false
      }
    }
  ],
  "channels": [
    {
      "name": "access-control",
      "orgs": [
        {
          "name": "Org1",
          "peers": [
            "peer0",
            "peer1"
          ]
        },
        {
          "name": "Org2",
          "peers": [
            "peer0",
            "peer1"
          ]
        }
      ]
    },
    {
      "name": "transaction-record",
      "orgs": [
        {
          "name": "Org1",
          "peers": [
            "peer0",
            "peer1"
          ]
        },
        {
          "name": "Org2",
          "peers": [
            "peer0",
            "peer1"
          ]
        }
      ]
    },
    {
      "name": "identity-management",
      "orgs": [
        {
          "name": "Org1",
          "peers": [
            "peer0",
            "peer1"
          ]
        },
        {
          "name": "Org2",
          "peers": [
            "peer0",
            "peer1"
          ]
        }
      ]
    }
  ],
  "chaincodes": [
    {
      "name": "ACL",
      "version": "0.0.1",
      "lang": "node",
      "channel": "access-control",
      "directory": "./chaincodes/chaincode-AccessControl-node",
      "endorsement": "OR('Org1MSP.member', 'Org2MSP.member')"
    },
    {
      "name": "TSR",
      "version": "0.0.1",
      "lang": "node",
      "channel": "transaction-record",
      "directory": "./chaincodes/chaincode-TransactionRecord-node",
      "endorsement": "OR('Org1MSP.member', 'Org2MSP.member')"
    },
    {
      "name": "IDM",
      "version": "0.0.1",
      "lang": "node",
      "channel": "identity-management",
      "directory": "./chaincodes/chaincode-IdentityManagement-node",
      "endorsement": "OR('Org1MSP.member', 'Org2MSP.member')"
    }
  ]
}